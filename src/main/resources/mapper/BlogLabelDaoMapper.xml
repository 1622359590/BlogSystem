<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.blogos.dao.blog.BlogLabelDao">

    <select id="listLabelById" resultType="BlogLabel">
        SELECT * FROM blog_label l WHERE l.id IN
        <foreach collection="ids"
                 item="item"
                 open="("
                 separator=","
                 close=")">
            #{item}
        </foreach>
    </select>

    <update id="update" parameterType="BlogLabel">
        UPDATE blog_label
        <set>
            <if test="bloggerId != null">
                blogger_id=#{bloggerId}
            </if>
            <if test="title != null">
                title=#{title}
            </if>
            <if test="createDate != null">
                create_date=#{createDate}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <insert id="insert" parameterType="BlogLabel">
        INSERT INTO blog_label (
            id,
            blogger_id,
            title,
            create_date
        ) VALUE (
            NULL,
            #{blogerId},
            #{title},
            NOW()
        )
    </insert>

    <delete id="delete">
        DELETE FROM blog_label
        WHERE id = #{value}
    </delete>
</mapper>